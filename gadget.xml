<?xml version="1.0" encoding="utf-8" ?>
<gadget>
    <name>SEC digital calendar</name>
    <namespace>secdigitalcalendar.gadget</namespace>
    <version>1.0.0</version>
    <author name="Gareth J M Saunders">
        <logo src="images/logo.png" />
        <info url="https://www.seccalendar.org.uk/" />
    </author>
    <copyright>GNU General Public License v3.0</copyright>
    <description>Shows today's feast and colour according to the Scottish Episcopal Church calendar.</description>
    <icons>
        <icon width="64" height="64" src="images/icon.png" />
    </icons>
    <hosts>
        <host name="sidebar">
            <base type="HTML" apiVersion="1.0.0" src="gadget.html" />
            <permissions>Full</permissions>
            <platform minPlatformVersion="1.0" />
            <defaultImage src="images/logo.png" />
        </host>
    </hosts>
</gadget>